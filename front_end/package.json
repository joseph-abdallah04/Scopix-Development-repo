{
  "name": "Scopix",
  "private": true,
  "version": "1.0.0",
  "productName": "Scopix",
  "description": "Scopix is a tool for analyzing Oscillometry and video Laryngoscopy data.",
  "type": "module",
  "main": "main.mjs",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.scopix.app",
    "electronVersion": "37.2.3",
    "productName": "Scopix",
    "icon": "assets/Scopix_logo.png",
    "files": [
      "dist-frontend/**/*",
      "main.*js",
      "preload.js",
      "assets/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__}/**",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "dist-backend/server",
        "to": "server"
      }
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/Scopix_logo.icns",
      "category": "public.app-category.medical"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/Scopix_logo.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/Scopix_logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/Scopix_logo.ico",
      "uninstallerIcon": "assets/Scopix_logo.ico"
    }
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.10.0",
    "echarts": "^5.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.2",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.5",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ]
}
